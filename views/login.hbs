<div class="container d-flex flex-column align-items-center login-container mt-3">
  <form action="/users/login" method="post" class="needs-validation" novalidate>
    {{> msg}}
    <div class="row g-3 align-items-center my-3">
      <div class="col-3"></div>
      <div class="col-9 text-center">
        <h4>歡迎使用記帳本</h4>
      </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
      <div class="col-3">
        <label for="email" class="col-form-label">Email:</label>
      </div>
      <div class="col-9">
        <input type="email" id="email" name="email" class="form-control" placeholder="請輸入Email" required>
        <div class="invalid-feedback">
          請輸入email
        </div>
      </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
      <div class="col-3">
        <label for="password" class="col-form-label">密碼:</label>
      </div>
      <div class="col-9">
        <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼" required>
        <div class="invalid-feedback">
          請輸入密碼
        </div>
      </div>
    </div>

    <div class="row g-3 align-items-center mb-3">
      <div class="col-3"></div>
      <div class="col-9 text-end">
        <button type="submit" class="btn btn-outline-dark btn-login">登入</button>
      </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
      <div class="col-3"></div>
      <div class="col-9 text-end">
        <a href="/auth/google" class="btn btn-outline-dark btn-login bg-warning"><i
            class="fa-brands fa-google me-2"></i>Google 登入</a>
      </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
      <div class="col-3"></div>
      <div class="mt-3 col-9">
        還沒有帳號嗎？ <a href="/users/register" class="text-primary fs-5">註冊</a>
      </div>
    </div>
  </form>
</div>

<script>
  const form = document.querySelector('form')
  form.addEventListener('submit', function (event) {
    if (!form.checkValidity()) {
      event.preventDefault()
      event.stopPropagation()
    }
    form.classList.add('was-validated')
  }, false)

</script>