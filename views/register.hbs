<div class="container d-flex flex-column align-items-center register-container mt-3">
  <form action="/users/register" method="post" class="needs-validation" novalidate>
    {{> msg}}
    <div class="row g-3 align-items-center my-3">
      <div class="col-3">
        <p class="required-column"><span class="text-danger">*</span>必填欄位</p>
      </div>
      <div class="col-9 text-center">
        <h4>使用者註冊</h4>
      </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
      <div class="col-3">
        <label for="name" class="col-form-label">姓名:</label>
      </div>
      <div class="col-9">
        <input type="text" id="name" name="name" class="form-control" placeholder="請輸入使用者名稱" value="{{name}}" required>
        <div class="invalid-feedback">
          請輸入使用者名稱
        </div>
      </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
      <div class="col-3">
        <label for="email" class="col-form-label">Email:</label>
      </div>
      <div class="col-9">
        <input type="email" id="email" name="email" class="form-control" placeholder="請輸入Email" value="{{email}}"
          required>
        <div class="invalid-feedback">
          請輸入email
        </div>
      </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
      <div class="col-3">
        <label for="password" class="col-form-label">密碼:</label>
      </div>
      <div class="col-9">
        <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼"
          value="{{password}}" required>
        <div class="invalid-feedback">
          請輸入密碼
        </div>
      </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
      <div class="col-3">
        <label for="confirmPassword" class="col-form-label">密碼:</label>
      </div>
      <div class="col-9">
        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="請輸入相同密碼"
          value="{{confirmPassword}}" required>
        <div class="invalid-feedback">
          請輸入相同密碼
        </div>
      </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
      <div class="col-3"></div>
      <div class="col-9 text-end">
        <button type="submit" class="btn btn-outline-dark btn-register">註冊</button>
      </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
      <div class="col-3"></div>
      <div class="mt-3 col-9">
        已經有帳號了嗎？ <a href="/users/login" class="text-primary fs-5">登入</a>
      </div>
    </div>
  </form>
</div>

<script>
  const form = document.querySelector('form')
  const password = document.getElementById('password')
  const confirmPassword = document.getElementById('confirmPassword')
  confirmPassword.addEventListener('input', event => {
    if (event.target.value !== password.value) {
      return event.target.setCustomValidity('請輸入相同密碼')
    }
    event.target.setCustomValidity('')
  })

  form.addEventListener('submit', event => {
    if (!form.checkValidity()) {
      event.preventDefault()
      event.stopPropagation()
    }
    form.classList.add('was-validated')
  }, false)

</script>